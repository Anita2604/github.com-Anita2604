#include <stdio.h>
int main()
{
int i,n,step,temp,count=0;
count++
printf("Enter the size of the array: ");
scanf("%d",&n);
int arr[n];
count++;
printf("Enter the elements of array: ");
for(i=0;i<n;i++)
  {
   scanf("%d",&arr[i]);
   count++;
  }
  count++
for(step=0;step<n-1;step++)
  {
  count++;
  for(i=0;i<n-step-1;step++)
     {
      count++;
      if(arr[i]>arr[i+1])
       {
       
        temp=arr[i];
        arr[i]=arr[i+1];
        arr[i+1]=temp;    
        count=count+3;  
       }
       count++;
     }
     count++;
  }
  count++
  printf("SORTED ARRAY: ");
  for(i=0;i<n;i++)
    {
     printf("%d",arr[i]);
     count++;
    }
    count++;
    printf("Space complexity= 20+4n");
    printf("Step Count= %d",count);
    return 0;
}
